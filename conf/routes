# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           application.others.HomeController.index
GET     /health                     application.others.HealthController.check

POST    /admin/login                application.admin.AdminLoginController.login
POST    /admin/users                application.admin.CreateUserController.create

POST    /auth/login                 application.auth.LoginController.login

GET     /cafes                      application.cafe.CafeController.all
GET     /cafe/:id                   application.cafe.CafeController.findById(id: Long)
POST    /cafes                      application.cafe.CafeController.add
